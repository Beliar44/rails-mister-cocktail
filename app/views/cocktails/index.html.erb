<div class='container'>

<h1>List of cocktails</h1>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li>
      <%= link_to cocktail.name, cocktail%>
      <%= link_to "Delete",
            cocktail_path(cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>
 <% end %>
</ul>

<%= link_to  "add new cocktail", new_cocktail_path %>

</div>
